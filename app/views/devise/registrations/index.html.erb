<div class="container margin-top">
    <div class="row">
    <div class="col-8">
      <h1 class="title-admin">Gestion des comptes utilisateurs</h1>
    </div>
    <div class="col-4">
      <%= link_to 'Ajouter un nouvel utilisateur', user_registration_path, class:'btn btn-primary btn-right' %>
    </div>
  </div>
  <hr>
      <div class="row">
        <div class="col-2">
          <label>Rôles</label>
        </div>
        <div class="col-3">
          <label>Prénom Nom</label>
        </div>
      </div>
      <hr>
    <% @users.each do |i| %>
      <div class="row">
        <div class="col-2">
        <p><% if i.admin == true %> Admin <% end %> <% if i.editor == true %> Editeur <% end %> <% if i.animator == true %> Animateur <% end %></p>
        </div>
        <div class="col-6">
         <p><b><%= i.firstname %> <%= i.lastname %></b></br>
         <%= i.email %></p>
        </div>
        <% if current_user.admin == true %>
      <div class="col">
        <p><%= link_to edit_user_path(i.id), title:"Modifier", class: "btn btn-primary" do %>
          Modifier
        <% end %></p>
      </div>
      <div class="col">
              <%= button_to "Supprimer", user_path(i.id),
                  method: :delete,
                  data: { confirm: "Veuillez confirmer la suppression !" },
                 :id => "delete", class:"btn btn-danger" %>
      </div>
      <% end %>
      </div>
    <% end %>
</div>
