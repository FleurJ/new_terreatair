<div class="container">
  <h1 class="content-title"><%= @content.title %></h1>
  <% if @activity.img_header.present?  %>
  <p><%= cl_image_tag @content.img_header.key, height: 300, width: 400, crop: :fill %></p>
  <% end %>
  <p><%= cl_image_tag @content.img_thumbnail.key, height: 200, width: 200, crop: :fill %></p>
  <% if @activity.img_thumbnail.present? %>
  <p><%= @content.status %></p>
  <% end %>
  <p class="teaser"><%= @content.teaser %></p>
  <p><%= @content.body %> </p>
<hr>
  <% if user_signed_in? %>
    <% if current_user.admin == true %>
    <div class="row">
      <div class="col-8">
       <p>Créé le <%= @content.created_at %>, par <%= @content.user.firstname %> - Modifié le <%= @content.updated_at %></p>
      </div>
      <div class="col-2">
      <%= button_to "Supprimer", content_path(@content),
                  method: :delete,
                  data: { confirm: "Veuillez confirmer la suppression !" },
                 :id => "delete", class:"btn btn-danger" %>
      </div>
      <div class="col-2">
        <%= button_to "Modifier", edit_content_path(@content),
            method: :get, class:"btn btn-primary" %>
      </div>
    </div>
    <% end %>
  <% end %>
</div>


