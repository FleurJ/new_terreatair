<div class="container margin-top">
  <h1>Créer une affiliation</h1>
  <hr>
  <%= simple_form_for @membership, url: memberships_path do |t| %>
  <%= t.input :start_date, order: [:day, :month, :year], required: true, label: 'Date de début' %>
  <%= t.input :price, label: 'Montant' %>
  <%= t.submit "Enregistrer", class: "btn btn-primary" %>
  <% end %>
</div>
