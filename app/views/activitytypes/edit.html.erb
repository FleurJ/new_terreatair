<div class="container margin-top">
  <h1>Créer un type d'activité</h1>
  <hr>
  <%= simple_form_for @activitytype, url: activitytype_path, method: :patch do |t| %>
  <%= t.input :title, label: 'Titre' %>
  <%= t.input :status, label: 'Statut', collection: ['active', 'inactive'] %>
  <%= t.submit "Enregistrer", class: "btn btn-primary" %>
  <% end %>
</div>
