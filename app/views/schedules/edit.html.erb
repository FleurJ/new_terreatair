<div class="container margin-top">
  <h1>Modifier le nouveau créneau de réservation</h1>
  <hr>
  <%= simple_form_for @schedule, url: schedule_path, method: :patch do |f| %>

  <%= f.input :schedule_date, order: [:day, :month, :year], required: true, label: "Date" %>
  <%= f.input :classes_qty, required: true, label: 'Nombre de classes' %>
  <%= f.association :activities, required: true, as: :check_boxes, collection: @activities, label: 'Activité' %>
  <% if current_user.admin == true %>
  <%= f.association :users, as: :check_boxes, :collection=> @users.map(&:firstname), label: 'Animateur ou animatrice' %>
  <%= f.input :status, label: 'Statut', collection: ['open', 'closed', 'booked'] %>
  <% end %>
  <%= f.submit "Enregistrer", class:"btn btn-primary" %>
  <% end %>
</div>
