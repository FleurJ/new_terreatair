<div class="container margin-top">
  <h1>Demande de réservation</h1>
  <hr>
  <%= simple_form_for @schedule, url: schedules_path do |f| %>
  <%= f.input :schedule_date, order: [:day, :month, :year],required: true, label: 'Date souhaitée' %>
  <%= f.input :classes_qty, collection: [4,5,6, 'autre'], label: 'Nombre de classes' %>
  <%= f.association :activities, as: :check_boxes,required: true, collection: @activities, label: 'Activité' %>
  <%= f.label :commentaire %>
  <%= f.rich_text_area :comment, label: 'commentaire', placeholder: "Si vous avez indiqué 'autre' dans le nombre de classes, précisez le nombre ici, nous vous contacterons par téléphone." %>
  <% if current_user.admin == true %>
    <%= f.input :status, label: 'Statut', collection: ['pending', 'validated', 'cancelled'], default:'pending' %>
  <% end %>
  <%= f.submit "Enregistrer", class:"btn btn-primary" %>
  <% end %>
</div>
